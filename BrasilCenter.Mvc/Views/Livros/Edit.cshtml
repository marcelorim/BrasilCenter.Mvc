@model BrasilCenter.Business.Models.Livro

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtPublicacao" class="control-label"></label>
                <input asp-for="DtPublicacao" class="form-control" />
                <span asp-validation-for="DtPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Capa Atual</label><br />
                <img src="~/uploads/capas_livros/@Model.Capa" alt="@Model.Capa" style="width:30%; height:30%" />
            </div>
            <div>
                <span class="btn btn-success fileinput-button">
                    <i class="fa fa-plus"></i>
                    <span>Adicionar Nova Capa</span>
                    <input id="files" type="file" name="files[]" multiple="">
                </span>
                <div id="img_nome">Nenhum arquivo selecionado.</div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div>&nbsp;</div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $("#files").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });

        $("#CapaUpload").attr("data-val", "true");
        $("#CapaUpload").attr("data-val-required", "Adicione a capa do livro.")
    </script>
}
